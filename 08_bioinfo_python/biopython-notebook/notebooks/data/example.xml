        </phy:clade>
        <phy:clade>
          <phy:name>B</phy:name>
          <phy:branch_length>0.23</phy:branch_length>
        </phy:clade>
      </phy:clade>
      <phy:clade>
        <phy:name>C</phy:name>
        <phy:branch_length>0.4</phy:branch_length>
      </phy:clade>
    </phy:clade>
  </phy:phylogeny>
